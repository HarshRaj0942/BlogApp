<%- include ("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
   


 
 <div class="row">
  
   <div>
   <!-- method override-->
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
       
      <div class="field">
        <label>Title</label>
        <input  type="text" name="blog[title]" value="<%=blog.title%>">
      </div> 

      <div class="field ">
        <label>Image</label>
        <input  type="text" name= "blog[image]" value="<%=blog.image%>"> 
      </div>
      
      <div class="field">
        <label>Blog Content</label>
        <textarea  name= "blog[content]"><%=blog.content%></textarea>
      </div>
    <div class="container" style="display:flex; justify-content:center;" >
       <button class ="ui violet inverted button large " type="submit">Submit!</button>
    </div>  

</form>

   </div>  
  <div> 
</div>




